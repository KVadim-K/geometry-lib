import math
import pytest
from geometry import Triangle

def test_triangle_area_345():
    t = Triangle(3, 4, 5)
    assert math.isclose(t.area(), 6.0, rel_tol=1e-12)

def test_triangle_right_true():
    t = Triangle(3, 4, 5)
    assert t.is_right()

def test_triangle_right_false():
    t = Triangle(2, 3, 4)
    assert not t.is_right()

def test_triangle_invalid_types():
    with pytest.raises(TypeError):
        Triangle("a", 2, 3)  # type: ignore[arg-type]

def test_triangle_triangle_inequality_violation():
    with pytest.raises(ValueError):
        Triangle(1, 2, 3)
